<div class="column is-mobile">
    <%= @events.each do |e| %>
      <div class="box">
            <article class="media">
                <div class="media-content">
                    <div class="content">
                        <strong>@<%= e.creator.username %></strong>
                        <h5><%= e.title %></h5>
                        <p><%= e.description %></p>
                    </div>
                    <nav class="level">
                    <div class="level-left is-mobile">
                    <%= link_to e, class: "level-item" do %>
                    <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                    <% end %>
                    <% if user_signed_in? && current_user.id == e.creator_id %>
                        <%= link_to edit_event_path(e), class: "level-item" do %>
                        <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to e, method: :delete, data: {confirm: "Are You Sure You Want To Delete This Event"} do %>
                        <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
                        <% end %>
                    <% elsif user_signed_in? && current_user.id != e.creator_id %>
                        <% if e.attendeds.include?(current_user) %>
                            <%= link_to "Cancel Attendence", cancel_attendence_event_path(e), class:"is-danger" %>
                        <% else %>
                            <%= link_to "Attend Event", attend_event_path(e), class:"is-primary" %>
                        <% end %>
                    <% end %>
                    </div>
                    </nav>
                </div>
            </article>
      </div>
    <% end %>
</div>