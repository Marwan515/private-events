
<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is_2">Create Event</h2>
        <%= simple_form_for(@event) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :name, required: true,
                        wrapper: false,
                        input_html: { class: "input" },
                        label_html: { class: "label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :description, required: true,
                        wrapper: false,
                        input_html: { class: "input" },
                        label_html: { class: "label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :location, required: true,
                        wrapper: false,
                        input_html: { class: "input" },
                        label_html: { class: "label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.button :submit, class: "grbtn" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>