<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <%= simple_form_for(@event) do |e| %>
          <%= e.error_notification %>
          <div class="field">
            <div class="control">
              <%= e.input :title, label: "Event Title", input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "Event Title...." %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= e.input :description, label: "Describe Your Event", input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "Event About...." %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= e.input :location, label: "Event Location", input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "New York..." %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= e.input :date, label: "Event Date", type: 'date', input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "2022/09/30.." %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= e.button :submit, class:"button is-large is-primary" %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= link_to 'Cancel', root_path, class:"button is-large is-fullwidth" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>