<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <p style="color: green"><%= notice %></p>

        <%= render @event %>
        <div>
          <p class="title is-2"><%= @event.title %></p>
          <br>
          <p class="subtitle is-2"><%= @event.description %></p>
          <br>
          <p class="subtitle is-2"><%= @event.location %></p>
          <p class="text-muted">
            <i class="far fa-calendar-alt text-dark fa-lg mr-1"></i>
            <%= @event.date_time.strftime("%B %-d, %Y at %l:%M %p") %>
          </p>
        </div>

        <div>
          <% if user_signed_in? && current_user == @event.creator %>
            <%= link_to "Edit this event", edit_event_path, class: "btn is-primary" %>
            <%= link_to "Destroy this event", event_path, method: :delete, class: "btn is-danger", data: { confirm: 'Are You Sure You Want To Delete This Event?' } %>
          <% elsif user_signed_in? && @event.attendeds.include?(current_user.id) %>
            <%= link_to "Cancel Attendence", method: :delete, class: "btn is-danger" %>
          <% else %>
            <%= simple_form_for(@attendee) do |a| %>
              <%= a.hidden_field :attended_id, :value => current_user.id %>
              <%= a.hidden_field :attended_event_id, :value => @event.id %>
              <%= button_to 'Attend', event_path, class:"btn is-info" %>
            <% end %>
          <% end %>
          <%= link_to "Back to event's", events_path %>
        </div>
      </div>
    </div>
  </div>
</div>